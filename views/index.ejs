<!DOCTYPE html>
<html ng-app="app.todos">
    <head>
        <meta charset="utf-8">
        <title>NodeJS</title>

        <!-- link css -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.5.0/css/xeditable.min.css">


        <link rel="stylesheet" href="assets/css/style.css">

    </head>
    <body ng-controller="todoController">

        <div class="container">
            <div class="jumbotron text-center">
                <h1>Danh sách phải làm <span class="label label-info">{{ todos.length }}</span></h1>
                <p></p>
            </div>

            <div id="todo-list" class="row">
                <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-7 col-md-offset-2 col-lg-7 col-lg-offset-2">
                    <div class="checkbox" ng-repeat="todo in todos">
                        <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                        <a href="" ng-click="deleteTodo(todo, $index)"><i class="fa fa-remove"></i></a>
                        <a href="" ng-click="textBtnForm.$show()"><i class="fa fa-edit"></i></a>
                        <span ng-class="{ strike: todo.isDone }" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)">{{ todo.text }}</span>
                    </div>
                </div>
            </div>

            <div id="todo-form" class="row">
                <div class="col-sm-8 col-sm-offset-2 text-center">
                    <form>
                        <div class="form-group">
                            <input type="text" ng-model="formData.text" class="form-control input-lg input-text" placeholder="Bạn muốn làm gì ?">
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg" ng-disabled="!formData.text" ng-click="createTodo()">Thêm mới</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="load-container" ng-show="loadContainer"><i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw"></i></div>

        <!-- link js -->
        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js" type="text/javascript"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.5.0/js/xeditable.min.js"></script>
        <script src="assets/js/main/app.js"></script>
        <script src="assets/js/main/services/svTodos.js"></script>
    </body>
</html>
